{
    // --- Editor ---
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 13,
    "editor.fontWeight":"normal",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.largeFileOptimizations": false,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [ 120 ],
    "editor.scrollbar.horizontal": "hidden",
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.wordWrapColumn": 120,

    // --- Explorer ---
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": { "*.feature": "${capture}.feature.cs", "*.xaml": "${capture}.xaml.cs" },

    // --- Extensions ---
    "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },

    // --- Files & Search ---
    "files.exclude": {
        "**/.azuredevops": true,
        "**/.git": true,
        "**/.vs": true,
        "**/Ref": true,
        "**/bin": true,
        "**/doc": true,
        "**/node_modules": true,
        "*.sln.DotSettings*": true,
    },
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,

    // --- Git --
    "git.autofetch": "all",
    "git.branchPrefix": "users/jobyjohn/",
    "git.confirmSync": false,
    "git.ignoreRebaseWarning": true,
    "git.mergeEditor": true,
    "git.openRepositoryInParentFolders": "always",

    "hediet.vscode-drawio.appearance": "light",
    "hediet.vscode-drawio.theme": "kennedy",

    // --- Project Manager ---
    "projectManager.git.baseFolders": [
        "C:\\Source",
        "D:\\Source-Extension\\released"
    ],

    // --- Omnisharp ---
    "omnisharp.enableAsyncCompletion": true,

    // --- Local History ---
    "local-history.path": "C:\\Users\\ing10284\\VSHistory\\",

    // --- Terminal ---
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "Cascadia Code",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
        }
    },
    "terminal.integrated.scrollback": 100000,

    "vscode-neovim.ctrlKeysForNormalMode": [
        "a",
        "b",
        "c",
        "d",
        "e",
        "f",
        "h",
        "i",
        "j",
        "k",
        "l",
        "m",
        "o",
        "r",
        "u",
        "v",
        "w",
        "x",
        "y",
        "z",
        "/",
        "]",
        "right",
        "left",
        "up",
        "down",
        "backspace",
        "delete"
    ],    
    "vscode-neovim.logOutputToConsole": true,

    "window.newWindowDimensions": "maximized",

    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Visual Studio 2019 Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
}
